    <script type="text/javascript">

        $(document).ready(function () {
            $(function () {
                configureModal();

                var status = "@ViewBag.Status";

                if (status != "") {
                    if (status != "False") {
                        alertify.success("Mercado Cadastrado");
                    } else {
                        alertify.error("Mercado não Cadastrado");
